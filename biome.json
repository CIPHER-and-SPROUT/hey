{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"files": {
		"maxSize": 100000000,
		"ignore": [
			"dist/*",
			"sw.js",
			"*.md",
			"generated.ts",
			"package.json",
			"tsconfig.json",
			"tsconfig.tsbuildinfo",
			"index.html"
		]
	},
	"javascript": {
		"formatter": {
			"indentWidth": 2,
			"quoteStyle": "single",
			"trailingComma": "none",
			"indentStyle": "space"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"a11y": { "useKeyWithClickEvents": "off" },
			"correctness": {
				"useExhaustiveDependencies": "off",
				"noUnusedVariables": "error"
			},
			"nursery": { "noUnusedImports": "error" },
			"suspicious": { "noExplicitAny": "off" },
			"recommended": true
		}
	}
}
