{
  "extends": "tsconfig/react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components*": ["src/app/components*"],
      "@lib*": ["src/lib*"],
      "@gql*": ["src/graphql*"],
      "@generated*": ["src/generated*"]
    },
    "plugins": [{ "name": "next" }],
    "strictNullChecks": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"]
}
